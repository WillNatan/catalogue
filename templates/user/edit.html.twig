{% extends 'admin/base.html.twig' %}

{% block title %}{{user.username}} - Modification{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header-primary">
                <h4>Modifier Utilisateur</h4>
            </div>
            <div class="card-body">

                {{ include('user/_form.html.twig', {'button_label': 'Modifier'}) }}


            </div>
            <div class="card-footer justify-content-start flex-wrap">
                {{ include('user/_delete_form.html.twig') }}
                {% if app.request.get("_route") == 'passwordEdit' %}
                {% else %}
                    <a href="{{ path('passwordEdit', {'id': user.id }) }}"><button type="button" class="btn btn-primary ml-1">Modifier le mot de passe</button></a>
                {% endif %}
            </div>
        </div>
        <div class="db-box bg-darker h-100 py-2">

            </div>
        </div>
    </div>
</div>

{% endblock %}
