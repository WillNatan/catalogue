                        </tr>
                        <tr>
                            <th>Nom d'utilisateur</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer justify-content-start">
                    <a href="{{ path('Utilisateurs') }}" class="mr-1 btn btn-primary"><i
                                class="fa fa-arrow-left"></i></a>

                    <a href="{{ path('Modifier-utilisateur', {'id': user.id}) }}"
                       class="btn btn-warning mr-1"><i class="fa fa-edit"></i></a>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
