{% extends 'admin/base.html.twig' %}

{% block title %}Dossier{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card border-top-primary shadow h-100 py-2">
                <div class="card-body">
                    <h1>{{ dossier.nomDossier }}</h1>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Nom du dossier</th>
                                <td>{{ dossier.nomDossier }}</td>
                            </tr>
                            <tr>
                                <th>Sous Dossiers</th>
                                <td>{% for sousDossier in dossier.subFolders %}{{ sousDossier.nomDossier }}{% if loop.last %}{% else %}, {% endif %}{% endfor %}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex flex-wrap">
                        <a href="{{ path('Dossiers') }}" class="btn btn-primary mr-1"><i class="fa fa-arrow-left"></i></a>
                        <a href="{{ path('Modifier-dossier', {'id': dossier.id}) }}" class="btn btn-orange mr-1"><i class="fa fa-edit"></i></a>
                        {{ include('dossier/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
